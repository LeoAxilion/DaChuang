<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">
    <LinearLayout
        android:id="@+id/welcome_pageTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/welcome_tryUsing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="40dp"
            android:text="试用"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcome_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/welcome_register"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@color/register_click"
            android:text="注册"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"/>
        <Button
            android:id="@+id/welcome_login"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:background="@color/login_click"
            android:text="登录"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcome_pageButton"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/welcome_button"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/welcome_pageButton1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/dot_dark"/>
        <ImageView
            android:id="@+id/welcome_pageButton2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="@drawable/dot_dark"/>
        <ImageView
            android:id="@+id/welcome_pageButton3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="@drawable/dot_dark"/>
        <ImageView
            android:id="@+id/welcome_pageButton4"
            android:layout_width="10dp"
            android:layout_marginLeft="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/dot_dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/welcome_viewpager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/welcome_pageTop"
        android:layout_above="@id/welcome_pageButton"
        android:layout_marginTop="20dp"/>
</RelativeLayout>